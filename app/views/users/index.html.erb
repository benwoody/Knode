<h1>All Users</h1>

<%# will_paginate %> 

<ul class="users">
  <% @users.each do |user| %>
   <li>
     <%= link_to user.uname, user %>
     <% if current_user.admin? %>
     | <%= link_to "Delete", user, :method => :delete, :confirm =>
"Are you sure?", :title => "Delete #{user.uname}" %>
     <% end %>
   </li>
 <% end %>
</ul>
